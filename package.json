{
    "name": "conversion",
    "productName": "Conversion",
    "version": "1.0.0",
    "description": "Conversion is a unit converter / Conversion est un convertisseur d'unit√©",
    "main": ".webpack/main",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "echo \"No linting configured\""
    },
    "keywords": [],
    "author": {
        "name": "keops-dev",
        "email": "pierjcb@gmail.com"
    },
    "license": "MIT",
    "config": {
        "forge": {
            "packagerConfig": {
                "icon": "./src/assets/icon.png",
                "name": "conversion"
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "iconUrl": "https://lh5.googleusercontent.com/OGFGx6E7iKx10WOBuY0lLtxIbQ9Z4LmFYnTZ5B0zGbL9qLfZB8EUuiarWsnU9N12XOXAypk-0_GdtFlv6jY2=w2246-h1441",
                        "setupIcon": "./src/assets/icon.ico",
                        "name": "Conversion",
                        "title": "Conversion"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {
                        "icon": "./src/assets/icon.png",
                        "name": "conversion",
                        "productName": "Conversion"
                    }
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                [
                    "@electron-forge/plugin-webpack",
                    {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [
                                {
                                    "html": "./src/index.html",
                                    "js": "./src/renderer.js",
                                    "name": "main_window",
                                    "preload": {
                                        "js": "./src/preload.js"
                                    }
                                }
                            ]
                        }
                    }
                ]
            ]
        }
    },
    "devDependencies": {
        "@babel/core": "^7.17.8",
        "@babel/preset-react": "^7.16.7",
        "@electron-forge/cli": "^6.0.0-beta.63",
        "@electron-forge/maker-deb": "^6.0.0-beta.63",
        "@electron-forge/maker-rpm": "^6.0.0-beta.63",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
        "@electron-forge/maker-zip": "^6.0.0-beta.63",
        "@electron-forge/plugin-webpack": "^6.0.0-beta.63",
        "@vercel/webpack-asset-relocator-loader": "^1.7.0",
        "babel-loader": "^8.2.4",
        "css-loader": "^6.7.1",
        "electron": "17.1.2",
        "node-loader": "^2.0.0",
        "prettier": "^2.6.0",
        "sass": "^1.49.9",
        "sass-loader": "^12.6.0",
        "style-loader": "^3.3.1"
    },
    "dependencies": {
        "bootstrap": "^5.1.3",
        "electron-squirrel-startup": "^1.0.0",
        "react": "^17.0.2",
        "react-bootstrap": "^2.2.1",
        "react-dom": "^17.0.2"
    }
}
